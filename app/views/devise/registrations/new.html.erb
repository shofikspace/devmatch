<div class="container">
    <div class="row">
       <div class="col-md-4 col-md-offset-4">
           
           <div class="sign_up_header text-center">
              <% if params[:plan] == '2' %>
               <h2>Pro account</h2>
                <p>Sign Up with pro account for 10$/month and get access to the community and contact information.</p>
              <% else %>
               <h2>Basic account </h2>
                <p>Sign Up for free and get basic access to the community.</p>
              <% end %>
          </div>
          
         <div class="well">
              <h2>Sign up</h2>
              
             <% if params[:plan] == '2' %>
              <%= render "pro_form" %>
             <% else %>
              <%= render "basic_form" %>
             <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
    </div>
</div>
